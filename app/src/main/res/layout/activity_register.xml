<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgapp"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:textColor="#ed5adc"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/fredokaregular"
        android:text="Socialist" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="#FDD835"
        android:layout_margin="18dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/fredokaregular"
        android:gravity="center"/>


    <EditText
        android:id="@+id/fullname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="95dp"
        android:layout_marginBottom="0dp"
        android:ems="10"
        android:textSize="15dp"
        android:hint="Name"
        android:drawableLeft="@drawable/ic_profile"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="95dp"
        android:layout_marginBottom="0dp"
        android:ems="10"
        android:hint="Username"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_id"
        android:inputType="text" />

    <EditText
        android:id="@+id/email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="95dp"
        android:layout_marginBottom="0dp"
        android:ems="10"
        android:textSize="15dp"
        android:hint="E-Mail"
        android:drawableLeft="@drawable/ic_email"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="95dp"
        android:layout_marginBottom="0dp"
        android:ems="10"
        android:textSize="15dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_lock"
        />

    <Button
        android:id="@+id/btn_Register"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="165dp"
        android:layout_marginRight="165dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/fredokaregular"
        android:textColor="#FFFFFF"
        android:background="#1778F2"
        android:drawableLeft="@drawable/ic_person_add"
        android:text="Register" />

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="175dp"
        android:layout_marginRight="175dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:fontFamily="@font/fredokaregular"
        android:text="Already have an account? \n Click here to sign in."
        android:textColor="#FDD835" />




</LinearLayout>