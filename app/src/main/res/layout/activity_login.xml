<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgapp"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:textColor="#ed5adc"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/fredokaregular"
        android:text="Socialist" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#FDD835"
        android:layout_margin="18dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/fredokaregular"
        android:gravity="center"/>




    <EditText
        android:id="@+id/email"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="95dp"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:hint="E-Mail"
        android:fontFamily="@font/fredokaregular"
        android:drawableLeft="@drawable/ic_email"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="95dp"
        android:ems="10"
        android:hint="Password"
        android:fontFamily="@font/fredokaregular"
        android:drawableLeft="@drawable/ic_lock"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="103dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="165dp"
        android:layout_marginRight="165dp"
        android:layout_marginBottom="15dp"
        android:text="Sign In"
        android:drawableLeft="@drawable/ic_person_pin_black"
        android:textColor="#FFFFFF"
        android:background="#1778F2"
        android:fontFamily="@font/fredokaregular"
        />

    <TextView
        android:id="@+id/textview_SignUp"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="175dp"
        android:layout_marginRight="175dp"
        android:layout_marginBottom="15dp"
        android:textSize="14dp"
        android:textColor="#FDD835"
        android:gravity="center"
        android:fontFamily="@font/fredokaregular"
        android:layout_gravity="center_vertical"
        android:text="Don't have an account? \n Click here to register."
        />

    <TextView
        android:id="@+id/textview_Forgot"
        android:layout_width="169dp"
        android:textSize="14dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="175dp"
        android:layout_marginRight="175dp"
        android:layout_marginBottom="2dp"
        android:text="Forgot Password?"
        android:fontFamily="@font/fredokaregular"
        android:gravity="center"
        android:textColor="#FDD835"
        />



</LinearLayout>